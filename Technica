class Technika {
    int koleso;
    int passazhir;
    int massa;
    String vidTopliva;
    String getVidTopliva(){
        return vidTopliva;
    }
    void toplivoDT(){
        vidTopliva = "Дизельное";
    }
    void toplivoAI(){
        vidTopliva = "Бензин";
    }
}

class Avtobus extends Technika{
    void vozitLudei(){
        System.out.println("Я могу возить "+ passazhir + " человек.");
    }
}

class Traktor extends Technika{
    void kapaet(){
        System.out.println("Я могу капать землю");
    }
}

class Gruzovik extends Technika{
    void vozitZemlu(){
        System.out.println("Я могу возить землю");
    }
}

class testTechnika {
    public static void main(String[] args) {
        Avtobus a = new Avtobus();
        a.koleso = 6;
        a.massa = 5000;
        a.passazhir = 20;
        a.toplivoAI();
        System.out.println("Я автобус, у меня "+a.koleso+" колес и моя масса "+a.massa+" кг. Топливо, которое я использую - "+a.vidTopliva);
        a.vozitLudei();

        Traktor t = new Traktor();
        t.koleso = 4;
        t.massa = 4500;
        t.passazhir = 0;
        t.toplivoDT();
        System.out.println("Я трактор, у меня "+t.koleso+" колеса и моя масса "+t.massa+" кг. Топливо, которое я использую - "+t.vidTopliva);
        t.kapaet();

        Gruzovik g = new Gruzovik();
        g.koleso = 10;
        g.massa = 9000;
        g.passazhir = 1;
        g.toplivoDT();
        System.out.println("Я грузовик, у меня "+g.koleso+" колес и моя масса "+g.massa+" кг. Топливо, которое я использую - "+g.vidTopliva);
        g.vozitZemlu();
    }
}
